---
import '../styles/reset.css'
const { frontmatter } = Astro.props
const  title = frontmatter?.title || Astro.props.title
---
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <nav>
      <div class="nav-left">
        <a href="/">主页</a>
        <a href="/posts">文章列表</a>
        <a href="/tools/playwright">Playwright</a>
        <a href="/tools/typescript5">TypeScript5</a>
        <!-- <a href="/tools/code">Code</a> -->
      </div>
    </nav>
    <div class="con">
      <h1 class="title">{title}</h1>
      <article>
        <slot /> 
      </article>
    </div>
    <footer>
      备案号 <a href="https://beian.miit.gov.cn/" target="_blank">京ICP备17017454号-1</a>
    </footer>
  </body>
</html>
<style lang="scss">
  :root {
    --max-width: 1010px;
  }
  nav { 
    --line-height: 60px;
    max-width: var(--max-width);
    margin: 0 auto;
    a {
      float: left;
      color: #222;
      font-size: 16px;
      line-height: var(--line-height);
      padding: 0 10px;
    }
  }
  .nav-left {
    height: var(--line-height);
  }
  .con {
    box-sizing: border-box;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 20px;
    border: 1px solid #eee;
    box-shadow: 0 0 4px #eee;
    font-size: 16px;
    min-height: calc(100vh - 100px);
  }
  .title {
    text-align: center;
    font-size: 22px;
  }
  nav a:first-child {
    margin-left: -10px;
  }
  footer {
    line-height: 40px;
    text-align: center;
  }
</style>